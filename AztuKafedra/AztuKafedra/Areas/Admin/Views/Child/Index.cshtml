@model IEnumerable<ChildCategory>
@{
    int count = 1;
}
<div class="container">
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Count</th>
                <th>Name</th>
                <th>ImagePath</th>
                <th>Description</th>
                <th>Title</th>
                <th>BigParentsCategory</th>
                <th>ParetnCategory</th>
                <th>Datetime</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (Model ?? new List<ChildCategory>()))
            {
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td> <img src="~/image/ChildImage/@item.ImagePath" /></td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td>@item.ParentCategory.BigParentsCategory.Name</td>
                    <td>@item.ParentCategory.Name</td>
                    <td>@item.DateTime</td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>