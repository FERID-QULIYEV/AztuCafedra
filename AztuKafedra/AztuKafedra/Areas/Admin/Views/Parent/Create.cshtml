@model ParentCategory
<div class="container">
    <div class="card p-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="BigParentsCategoryId"></label>
                    <select asp-for="BigParentsCategoryId" class="form-control">
                        <option value="">Seçiniz</option>
                        @if (ViewBag.Parents != null)
                        {
                            foreach (SelectListItem product in ViewBag.Parents)
                            {
                                <option value="@product.Value">@product.Text</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="BigParentsCategory"></span>
                </div>
            </div>
            <button class="btn btn-success" type="submit">Submit</button>
        </form>
    </div>
</div>
